@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}

<h2>Home</h2>

<form method="post">
    <table class="table">
        <thead>
            <tr>
                <th>Name</th>
                <th>Status</th>
            </tr>
        </thead>
        <tbody>
             @foreach (var artWork in Model.ArtWorks) { 
            <tr>
                <td>@artWork.Name</td>
                <td>@artWork.Status</td>
                <td><a asp-page="./CheckDetails" asp-route-id="@artWork.Id">Check details</a></td>
                <td><a asp-page="./Edit" asp-route-id="@artWork.Id">Edit</a></td>
                <td>
                    <button asp-page-handler="delete" asp-route-id="@artWork.Id">Delete</button>
                </td>
            </tr>
             }
        </tbody>
    </table>

    <a asp-page="./AddArtWork">Add new artwork</a>
</form>